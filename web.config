<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!--
      Reverse proxy config for Next.js (standalone) running on http://localhost:3000
      Requirements on IIS:
        - URL Rewrite installed
        - ARR installed and "Enable Proxy" turned ON (Server Proxy Settings)
      Also ensure these server variables are ALLOWED in URL Rewrite:
        - HTTP_X_FORWARDED_PROTO
        - HTTP_X_FORWARDED_HOST
        - HTTP_X_FORWARDED_FOR
    -->
    <webSocket enabled="false" />
    <rewrite>
      <rules>
        <!-- Redirect HTTP -> HTTPS -->
        <rule name="RedirectToHttps" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
            <!-- Avoid redirect loops when SSL is terminated upstream (CDN/LB) and origin sees HTTP -->
            <add input="{HTTP_X_FORWARDED_PROTO}" pattern="^https$" ignoreCase="true" negate="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- Let IIS serve any existing file/folder directly (e.g. /favicon.ico, /.next/static/*, /public/* if you keep it) -->
        <rule name="ExistingFiles" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- Reverse proxy everything else to Next.js on localhost:3000 -->
        <rule name="ReverseProxyToNode" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://localhost:3000/{R:1}" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>